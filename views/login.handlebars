<div id="login-page">
    <div class="container my-2">
        <div class="row justify-content-center">
            <div class="card border-0 rounded bg-light" style="width: 30rem">
                <div class="card-header text-center pt-3 custom-primary-btn">
                    <h1 class="display-4"><i class="fas fa-feather-alt fa-lg"></i> Left or Write</h1>
                </div>
                <div class="card-body text-center">
                    <h5>To continue, log in to Left or Write</h5>
                    <a href="/auth/google" class="btn my-2"><img src="/images/btn_google_signin_light_normal_web.png"></a>
                    <h6 class="my-2">OR</h6>
                    <form class="my-3">
                        <div class="form-group">
                            <input disabled type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email address">
                        </div>
                        <div class="form-group">
                            <input disabled type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                        </div>
                        <button disabled type="submit" class="btn btn-secondary">Log In</button>
                    </form>
                    <br>
                    <div class="dropdown-divider"></div>
                    <br>
                    <h5>Don't have an account?</h5>
                    <a href="#" class="btn btn-success disabled">Sign Up</a>
                </div>
                <div class="card-footer text-center custom-primary-btn">
                    <small>If you click "Sign in with Google" and are not a Left or Write user, you will be registered.</small>
                </div>
            </div>
        </div>
    </div>
</div>