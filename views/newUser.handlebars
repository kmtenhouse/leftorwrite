<div class="newUserPage">
    <div class="container text-white py-5">
        <div class="jumbotron jumbotron-fluid bg-transparent">
            <h1 class="display-3 text-white">Welcome to Left or Write!</h1>
        </div>
        <div class="row my-lg-5 py-lg-3">
            <div class="col">
                <h3>Your current username is: {{user.displayName}}</h3>
                {{#if displayMessage}}
                    <br>
                    <h4 class="text-warning font-weight-bold">{{message}}</h4>
                {{/if}}
            </div>
        </div>
        {{#unless displayMessage}}
            <div class="row mt-5">
                <div class="col">
                    <a class="btn btn-danger" href="/">Keep Username</a>
                </div>
            </div>
            <div class="row my-4">
                <div class="col ml-3">
                    <h3>OR</h3>
                </div>
            </div>
        {{/unless}}
        <div class="row align-items-center">
            <div class="col">
                <h5>Create New Username: </h5>
                <form class="form-inline" id="newUsernameForm">
                    <div class="form-group mr-3">
                        <label for="username-input" class="sr-only">Username</label>
                        <input type="text" class="form-control" id="username-input">
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="updateUsernameModal" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Username Updated!</h5>
      </div>
      <div class="modal-body text-center">
        <p>Your username has been successfully changed! </p>
        <p>New username: <strong><span id="newUsername"></span></strong></p>
      </div>
      <div class="modal-footer">
        <a href="/" class="btn btn-success">Go to My Dashboard</a>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="errorModal">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Username Already Taken!</h5>
      </div>
      <div class="modal-body">
        <p>Sorry! The username you have choosen is already used by another user.</p>
        <p>Please try again!</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{{> scriptTags/scripts}}