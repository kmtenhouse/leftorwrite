<div class="card border-success m-1 custom-card" data-id="{{id}}">
    <!-- Link to the Page Libray for this story -->
    <a href="/story/pagelibrary/{{id}}">
    <!-- Story Title -->
    <h5 class="card-header border-bottom-0 bg-transparent">{{title}}</h5>
    <div class="card-body mx-auto d-none d-sm-block">
        <!-- Card Image -->
        <img class="card-img-top img-fluid story-img" src="images/script.svg" alt="Story">
    </div>
    <!-- When story was last updated -->
    <div class="card-footer border-top-0 bg-transparent text-right"><small class="text-muted">{{updatedAt}}</small></div>
    </a>
</div>