<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6">
                    <h2>{{dbStory.title}}</h2>
                    <h3>By: {{author.displayName}}</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <p>{{page.content}}</p>
        </div>
        <div class="card-footer">
            {{#if page.isEnding}}
                {{> content/readStory/endPageButtons}}
            {{else}}
                {{#each links}}
                    {{> content/readStory/pageLinks}}
                {{/each}}
            {{/if}}
        </div>
    </div>
</div>