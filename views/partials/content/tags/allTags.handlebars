<div class="container-fluid my-5">
    <div class="jumbotron jumbotron-fluid text-center bg-transparent">
        <h1 class="display-4">All Tags</h1>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row justify-content-around">
                {{#each tags}}
                    <div class="col-sm-12 col-md-4 col-lg-3 text-center m-3">
                        <a href="/tags/{{id}}" class="btn btn-success">{{dataValues.TagName}} <span class="badge badge-light"> {{dataValues.num_stories}} </span></a>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>