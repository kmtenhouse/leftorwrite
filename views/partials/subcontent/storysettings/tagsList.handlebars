<ul class="list-group rounded" id="tagList">
    {{#each tags}}
        {{#if active}}
            <li class="list-group-item">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input tag checked" id="tag{{id}}" data-tag-name="{{TagName}}" data-tag-id="{{id}}">
                    <label class="form-check-label" for="tag{{id}}">{{TagName}}</label>
                </div>
            </li>
        {{else}}
            <li class="list-group-item">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input tag" id="tag{{id}}" data-tag-name="{{TagName}}" data-tag-id="{{id}}">
                    <label class="form-check-label" for="tag{{id}}">{{TagName}}</label>
                </div>
            </li>
        {{/if}}
    {{/each}}
    <li class="list-group-item">
        <button type="button" class="btn custom-primary-btn" id="tagModalButton" data-toggle="modal" data-target="#createTagModal">Create New Tag</button>
    </li>
</ul>